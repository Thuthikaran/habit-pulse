<div class="create-form-container mt-0">
<h2 class="create-habit">
  <span class="plus" style="color: #670BFF;">+</span>
  Create a
  <span class="plus" style="color: #670BFF;">habit</span>
</h2>

  <div class="date-display"><%= Time.now.strftime("< %d %b %Y >") %></div>


  <%= simple_form_for(@habit) do |f| %>
    <%= f.error_notification %>

    <div class="breakpoint ">

      <div class="habit-label-input">
        <%= f.label :name, 'Habit', class: "habit-label-field col-2" %>
        <%= f.input :name, label: false, required: true, class: "col-10" %>
      </div>

      <div class="category-label-input">
        <%= f.label :category, 'Category', class: "habit-label-field"  %>
        <%= f.input :category, collection: Habit::CATEGORIES, label: false %>
      </div>

      <div class="frequency-container my-4">
        <label for="frequency" class="form-label habit-label-field">Frequency</label>
        <div id="frequency-options" class="d-flex flex-wrap">
          <% ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'].each do |day| %>
            <div class="form-check me-3">
              <%= check_box_tag 'habit[days][]', day, false, id: "checkbox_#{day.downcase}", class: "form-check-input" %>
              <label for="checkbox_<%= day.downcase %>" class="form-check-label"><%= day %></label>
            </div>
          <% end %>
        </div>
      </div>


      <div class="reminder-label-input mt-3">
        <%= f.label :reminder, 'Reminder', class: "habit-label-field" %>
        <%= f.input :reminder, as: :time, label: false %>
      </div>

      <div class="description-label-input">
        <%= f.label :description, 'Description', class: "habit-label-field" %>
        <%= f.input :description, label: false, as: :text,required: false %>
      </div>


    </div>
    
  <%= f.submit 'Submit', class: 'btn btn-primary px-4 py-2 rounded', style: 'background-color: #670BFF; transition: background 0.3s ease; border-radius: 10px;' %>
  <%= f.submit 'Cancel', class: 'btn btn-secondary px-4 py-2 rounded ml-2', style: 'border-radius: 10px;' %>




  <% end %>

</div>
