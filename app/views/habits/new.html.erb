<div class="create-form-container">
  <h2 class="create-habit">Create a habit</h2>
  <span class="date-display"><%= Time.now.strftime("< %d %b %Y >") %></span>

  <%= simple_form_for(@habit, html: { novalidate: true }) do |f| %>

  <div> 
  <%= f.label :name, 'Habit', class: "habit-label-field" %>
    <%= f.input :name, label: false, required: true %>  
    <span class="habit-label-field">
      <%= f.input :category, collection: Habit::CATEGORIES %>
    </span>

    <div>
      <label for="frequency" class="habit-label-field">Frequency</label>
      <div id="frequency-options">
        <% ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'].each do |day| %>
          <div>
            <%= check_box_tag 'habit[days][]', day, false, id: "checkbox_#{day.downcase}" %>
            <label for="checkbox_<%= day.downcase %>"><%= day %></label>
          </div>
        <% end %>
      </div>
    </div>
        
    <span class="habit-label-field">
      <%= f.input :reminder, label: 'Reminder' %>
    </span>

    <span class="habit-label-field">
      <%= f.input :description, label: 'Description', as: :text, placeholder: 'Enter a description of the habit', required: false %>
    </span>

  </div>

  <div>
    <%= f.submit 'submit', class: 'submit-btn' %>
  </div>
  <div>
    <%= f.submit 'cancel', class: 'cancel-btn' %>
  </div>

<% end %>

</div>